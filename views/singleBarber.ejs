<!DOCTYPE html>
<html>
  <head>
    <title>Barber Shop - <%= barber.name %></title>
    <style>
      body {
        font-family: sans-serif;
        margin: 0;
        padding: 0;
      }

      .header {
        background-color: #333;
        color: white;
        padding: 1em;
        text-align: center;
      }

      .container {
        max-width: 800px;
        margin: 0 auto;
        padding: 1em;
      }

      .barber {
        display: flex;
        flex-wrap: wrap;
        justify-content: space-between;
        margin-bottom: 2em;
      }

      .barber img {
        width: 150px;
        height: 150px;
        object-fit: cover;
        border-radius: 50%;
        margin-right: 1em;
      }

      .barber-info {
        flex-grow: 1;
        max-width: 400px;
      }

      .barber h1 {
        margin-top: 0;
      }

      .barber p {
        margin: 0;
      }
    </style>
  </head>
  <body>
    <header class="header">
      <h1>Barber Shop</h1>
    </header>
    <div class="container">
      <div class="barber">
        <!-- <img src="<%= barber.image %>" alt="<%= barber.name %>'s photo"> -->
        <div class="barber-info">
          <h1><%= barber.name %></h1>
          <p><strong>Speciality:</strong> <%= barber.specialty %></p>
          <p>Welcome to the profile page for <%= barber.name %>! Here you can find information about their services and availability.</p>
          <!-- Add more content as needed -->
        </div>
      </div>
      <section>
        <h1>Reviews</h1>
  <% if (reviews.length > 0) { %>
    <ul>
      <% reviews.forEach(function(review) { %>
        <li><%= review.name %> - <%= review.comment %> -<%= review.star %></li>
      <% }); %>
    </ul>
  <% } else { %>
    <p>There are no review to show.</p>
  <% } %>
      </section>
      <section>
        <h2>Add Review</h2>
        <form action="/customer/<%= shop.slug%>/<%=barber.name%>/review-register" method="POST">
          <label for="name">Name:</label>
          <input type="text" id="name" name="name" required>
      
          <label for="comment">Comment</label>
          <input type="text" id="comment" name="comment" required>

          <label for="star">Stars</label>
          <input type="number" id="star" name="star" required>
      
          <button type="submit">Add Review</button>
        </form>
      </section>

      <section>
        <h1>Create Appointment</h1>
        <form action="/customer/<%= shop.slug%>/<%=barber.name%>/appointment-register" method="POST">
          <label for="name">Name:</label>
          <input type="text" id="name" name="name" required>
        
          <label for="date">Date and Time:</label>
          <input type="datetime-local" id="date" name="date" required>

          <button type="submit">Create Appointment</button>
        </form>
      </section>
    </div>
  </body>
</html>